<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/padding_24">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/img_medium"
        android:layout_height="@dimen/img_medium"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/prog_bar_state_2"
        android:indeterminateDrawable="@drawable/prog_bar_state_2"
        android:max="100"
        android:progress="65"
        tools:visibility="invisible"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_24"
        android:text="@string/msg_loading"
        android:textColor="@color/white"
        android:textSize="16sp"

        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>